<%- include('layout', { 
    title: 'Outbox', 
    user: user, 
    body: `
        <section>
            <h2>Outbox</h2>
            <button id="delete-selected">Delete</button>
            <table>
                <thead>
                    <tr>
                        <th><input type="checkbox" id="select-all" /></th>
                        <th>Recipient</th>
                        <th>Subject</th>
                        <th>Received Time</th>
                        <th>Body</th>
                    </tr>
                </thead>
                <tbody>
                    ${Array.isArray(emails) ? emails.map(email => `
                        <tr id="email-row-${email.id}">
													  <td><input type="checkbox" name="emailIds" value="${email.id}" /></td>
                            <td>${email.fullname}</td>
                            <td><a href="/email/${email.id}">${email.subject}</a></td>
                            <td>${email.body}</td>
                            <td>${new Date(email.timestamp).toLocaleString('vi-VN', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit',
    second: '2-digit',
    hour12: false, // Use 24-hour format
})}
</td>
                        </tr>
                    `).join('') : '<tr><td colspan="4">No emails found.</td></tr>'}
                </tbody>
            </table>
            <div class="pagination">
                ${currentPage > 1 ? `<a href="/outbox?page=${currentPage - 1}"><<</a>` : ''}
                ${Array.from({ length: totalPages }, (_, i) => `
                    <a href="/outbox?page=${i + 1}" class="${i + 1 === currentPage ? 'active' : ''}">${i + 1}</a>
                `).join('')}
                ${currentPage < totalPages ? `<a href="/outbox?page=${currentPage + 1}">>></a>` : ''}
            </div>
        </section>
    `
}) %>

<style>
/* General styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #f4f4f4;
}

/* Inbox Section */
section {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    padding: 20px;
}

/* Heading */
h2 {
    margin-top: 0;
    color: #333;
}

/* Button styles */
button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #0056b3;
}

/* Table styles */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #f2f2f2;
}

td a {
    color: #007bff;
    text-decoration: none;
}

td a:hover {
    text-decoration: underline;
}

/* Checkbox styles */
input[type="checkbox"] {
    cursor: pointer;
}
.pagination {
    margin-top: 20px;
    text-align: center; /* Center align the pagination links */
}

.pagination a {
    margin: 0 5px;
    padding: 5px 10px;
    text-decoration: none;
    color: #007bff;
}

.pagination a.active {
    font-weight: bold;
    text-decoration: underline;
}

  </style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const deleteButton = document.getElementById("delete-selected");
	console.log("This is delete button");
	
  const selectAllCheckbox = document.getElementById("select-all");
	console.log("This is checkbox button")

  selectAllCheckbox.addEventListener("click", () => {
    document.querySelectorAll("input[name='emailIds']").forEach(checkbox => {
      checkbox.checked = selectAllCheckbox.checked;
    });
  });

  deleteButton.addEventListener("click", async () => {
    // Gather only checked checkboxes
    const selectedEmailIds = Array.from(document.querySelectorAll("input[name='emailIds']:checked"))
      .map(checkbox => checkbox.value);
    
    if (selectedEmailIds.length > 0) {

			const body = JSON.stringify({ emailIds: selectedEmailIds});
			console.log(body);
			
      try {
        const response = await fetch("/deleteEmails", {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: body
        });

				console.log("Response: " + JSON.stringify(response));
				
        if (response.ok) {
          selectedEmailIds.forEach(id => {
            const row = document.getElementById(`email-row-${id}`);
            if (row) row.remove();
          });
        } else {
          console.error("Failed to delete emails.");
        }
      } catch (error) {
        console.error("Error:", error);
      }
    } else {
      alert("Please select at least one email to delete.");
    }
  });
});
</script>