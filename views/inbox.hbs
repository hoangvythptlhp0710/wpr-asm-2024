<%- include('layout', { 
    title: 'Inbox', 
    user: { fullname: user.fullname },  // Assuming user has fullname property
    body: `
        <section>
            <h2>Inbox</h2>
            <table>
                <thead>
                    <tr>
                        <th>Sender</th>
                        <th>Subject</th>
                        <th>Received Time</th>
                        <th>Body</th> <!-- Column for the email body -->
                    </tr>
                </thead>
                <tbody>
                    <% emails.forEach(email => { %>
                        <tr>
                            <td><%= email.sender_id %></td>
                            <td><%= email.subject %></td>
                            <td><%= new Date(email.timestamp).toLocaleString() %></td> <!-- Format timestamp -->
                            <td><%= email.body %></td> <!-- Show the email body -->
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    `
}) %>
